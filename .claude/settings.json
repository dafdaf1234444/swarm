{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 tools/hooks/pre-tool-git-safe.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 tools/hooks/post-edit-validate.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 tools/hooks/session-end-check.py"
          },
          {
            "type": "command",
            "command": "mkdir -p workspace/autoswarm-logs && touch workspace/autoswarm-trigger"
          }
        ]
      }
    ]
  }
}
